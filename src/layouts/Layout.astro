---
import { Navigation } from '../components/Navigation';
import { Footer } from '../components/Footer';
import '../styles/global.css';

const { title, description } = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/favicon.svg`}
    />
    <title>{title} | In Lexi Studio</title>
    <meta name="description" content={description || 'In Lexi Studio Photography'} />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600&family=Cormorant+Garamond:ital,wght@0,300;0,400;0,600;1,400&family=Montserrat:wght@200;300;400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-dark-bg text-off-white overflow-x-hidden flex flex-col min-h-screen">
    <Navigation client:load />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
